#include <stdio.h>
void findAllTriplets(int A[], int n)
{
	if (n < 3) {
		return;
	}


	for (int j = 1; j < n - 1; j++)
	{
		
		int i = j - 1, k = j + 1;

		
		while (1)
		{
		
			while (i >= 0 && k < n && (A[j] % A[i] == 0) &&
					(A[k] % A[j] == 0) && (A[j] / A[i] == A[k] / A[j]))
			{
			
				printf("%d %d %d\n", A[i], A[j], A[k]);

				
				k++ , i--;
			}

			if (i < 0 || k >= n) {
				break;
			}

			if (A[j] % A[i] == 0 && A[k] % A[j] == 0)
			{
				if (A[j] / A[i] < A[k] / A[j]) {
					i--;
				}
				else {
					k++;
				}
			}

			else if (A[j] % A[i] == 0) {
				k++;
			} else {
				i--;
			}
		}
	}
}

int main()
{
	int n;
	scanf("%d",&n);
	int A[n];
for(int k=0;k<n;k++)
	{
	    scanf("%d",&A[k]);
	} 
	findAllTriplets(A, n);

	return 0;
}
